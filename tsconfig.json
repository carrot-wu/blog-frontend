{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@/assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@routers/*": ["routers/*"],
      "@store/*": ["store/*"],
      "@type/*": ["types/*"],
      "@views/*": ["views/*"],
      "@services/*": ["services/*"],
      "@iconfont/*": ["iconfont/*"],
      "@reducers/*": ["reducers/*"]
    }
  },
  "include": [
    "src"
  ]
}
